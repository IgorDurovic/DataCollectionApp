                android:name="android.support.PARENT_ACTIVITY"
                android:value="sciencefair.igordurovic.datacollectionapp.MainInfoActivity" />
        </activity>
        <activity
            android:name=".Gender"
            android:label="@string/title_activity_gender"
            android:parentActivityName=".MainInfoActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="sciencefair.igordurovic.datacollectionapp.MainInfoActivity" />
        </activity>
        <activity
            android:name=".Age"
            android:label="@string/title_activity_age"
            android:parentActivityName=".MainInfoActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="sciencefair.igordurovic.datacollectionapp.MainInfoActivity" />
        </activity>
    </application>

</manifest>
